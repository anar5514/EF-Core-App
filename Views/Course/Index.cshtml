@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
}

<div class="p-4">

    <div class="bg-success text-white p-4">
        Course list
    </div>

    <form asp-action="Index" method="get" class="m-4">
        <div class="form-group">
            <input name="name" class="form-control" placeholder="Course name">
        </div>

        <div class="form-group">
            <input name="price" class="form-control" placeholder="Price">
        </div>

        <div class="form-check mb-2">
            <input name="isActive" type="checkbox" class="form-check-input">
            <label for="IsActive" class="form-check-label">
                Is Active
            </label>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <div class="table-responsive">
        <table class="table table-responsive-bordered table-striped table-sm">

            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>IsActive</th>
                    <th>Instructor</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.IsActive</td>
                        <td>@item.Instructor?.Name</td>
                        <td>
                            <form asp-action="Delete" asp-route-courseId="@item.Id">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-primary">
                                    Edit
                                </a>

                                <button type="submit" class="btn btn-danger">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-action="Create" class="btn btn-primary">Create</a>

    </div>

</div>

